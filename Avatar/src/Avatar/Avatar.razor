@namespace Skclusive.Material.Avatar
@inherits MaterialComponent

<Component
    RootRef="@RootRef"
    Tag="@Component"
    Class="@_Class"
    Style="@_Style"
    OnClick="@HandleClickAsync"
    OnClickStop="@OnClickStop"
    OnClickPrevent="@OnClickPrevent"
    @attributes="Attributes">
    @if (IsImage)
    {
        <img
            class="@_ImageClass"
            style="@_ImageStyle"
            alt="@Alt"
            src="@Src"
            srcSet="@SrcSet"
            sizes="@Sizes"
            @attributes="ImageProps" />
    }
    else if (HasContent)
    {
        @ChildContent
    }
</Component>
