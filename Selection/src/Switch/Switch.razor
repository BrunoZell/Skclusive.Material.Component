@namespace Skclusive.Material.Selection
@inherits SelectionConfig

<Component
    RootRef="@RootRef"
    ChildRef="@ChildRef"
    Tag="@Component"
    Class="@_Class"
    Style="@_Style"
    @attributes="Attributes">
    <SwitchBase
        RootRef="@context.RefBack"
        Id="@Id"
        Type="checkbox"
        Name="@Name"
        Value="@Value"
        Color="@_Color"
        Class="@_SwitchBaseClass"
        Style="@_SwitchBaseStyle"
        DefaultChecked="@DefaultChecked"
        Checked="@Checked"
        Disabled="@Disabled"
        DisableRipple="@DisableRipple"
        TabIndex="@TabIndex"
        OnChange="@OnChange"
        InputClass="@_InputClass"
        CheckedClass="@_CheckedClass"
        DisabledClass="@_DisabledClass"
        InputStyle="@InputStyle"
        Icon="@Icon"
        CheckedIcon="@CheckedIcon"
        InputProps="@InputProps" />
    <span
        class="@_TrackClass"
        style="@_TrackStyle" />
</Component>

