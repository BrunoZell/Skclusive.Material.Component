@namespace Skclusive.Material.List
@inherits MaterialComponentBase

<CascadingValue
    Value="ChildContext">
    @if (HasSecondaryAction)
    {
        <Component
            RootRef="@RootRef"
            ChildRef="@ChildRef"
            Tag="@ContainerComponent"
            Class="@_ContainerClass"
            Style="@_ContainerStyle"
            TabIndex="@TabIndex"
            Disabled="@Disabled"
            @attributes="Attributes">
            @if (Button)
            {
                <ButtonBase
                    Component="@_Component"
                    Class="@_Class"
                    Style="@_Style"
                    Disabled="@Disabled"
                    FocusVisible="@AutoFocus"
                    FocusVisibleClass="@_FocusVisibleClass"
                    OnClick="@HandleClickAsync"
                    OnKeyDown="@HandleKeyDownAsync"
                    @attributes="Attributes"
                    Context="ChildContext">
                    @ChildContent(GetItemContext(ChildContext))
                </ButtonBase>

            } else
            {
                <Component
                    Tag="@_Component"
                    NoWrap="@NoWrap"
                    Class="@_Class"
                    Style="@_Style"
                    Disabled="@Disabled"
                    OnClick="@HandleClick"
                    @attributes="Attributes"
                    Context="ChildContext">
                    @ChildContent(GetItemContext(ChildContext))
                </Component>
            }
            @SecondaryActionContent
        </Component>
    } else
    {
        @if (Button)
        {
            <ButtonBase
                RootRef="@RootRef"
                ChildRef="@ChildRef"
                Component="@_Component"
                Class="@_Class"
                Style="@_Style"
                Disabled="@Disabled"
                TabIndex="@TabIndex"
                FocusVisible="@AutoFocus"
                FocusVisibleClass="@_FocusVisibleClass"
                OnClick="@HandleClickAsync"
                OnKeyDown="@HandleKeyDownAsync"
                @attributes="Attributes"
                Context="ChildContext">
                @ChildContent(GetItemContext(ChildContext))
            </ButtonBase>

        } else
        {
            <Component
                RootRef="@RootRef"
                ChildRef="@ChildRef"
                Tag="@_Component"
                NoWrap="@NoWrap"
                Class="@_Class"
                Style="@_Style"
                Disabled="@Disabled"
                TabIndex="@TabIndex"
                OnClick="@HandleClick"
                @attributes="Attributes"
                Context="ChildContext">
                @ChildContent(GetItemContext(ChildContext))
            </Component>
        }
    }
</CascadingValue>