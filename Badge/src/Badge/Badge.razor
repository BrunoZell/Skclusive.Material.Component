@namespace Skclusive.Material.Badge
@inherits MaterialComponent

<Component
    RootRef="@RootRef"
    Tag="@Component"
    Class="@_Class"
    Style="@_Style"
    OnClick="@HandleClickAsync"
    OnClickStop="@OnClickStop"
    OnClickPrevent="@OnClickPrevent"
    @attributes="Attributes">
    @ChildContent
    <span
        class="@_BadgeClass"
        style="@_BadgeStyle">
        @if (CanRenderContent)
        {
            @BadgeContent
        } else
        {
            @BadgeDisplay
        }
    </span>
</Component>
