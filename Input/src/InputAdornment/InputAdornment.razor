@namespace Skclusive.Material.Input
@inherits MaterialContextComponent

<CascadingValue
    Value="NullContext">
    <Component
        RootRef="@RootRef"
        Tag="@Component"
        Class="@_Class"
        Style="@_Style"
        @attributes="Attributes">
        @if (RenderTypography)
        {
            <Typography
                RootRef="context.RefBack"
                Color="Color.TextSecondary">
                @Adornment
            </Typography>
        }
        else
        {
            @ChildContent(context)
        }
    </Component>
</CascadingValue>
